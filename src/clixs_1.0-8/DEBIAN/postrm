#!/bin/bash

function tag(){
	local TAG="<$(basename "$0")> $1 ::"
	sed "s/^/${TAG} /"
}
function main(){
	date | tag "$@"

	local BASE='/usr/local/share'
	local REPO='clixs'
	local GIT='michaelsalisbury'

	case "$1" in
		remove)
			tag "$@" <<< "Removing \"${BASE}/${REPO}\""
			rm -rf "${BASE}/${REPO}/{bin,doc,.git,lib,tmp}"

		;;
		upgrade)
			echo -n

		;;
		purge)
			tag "$@" <<< "Removing \"${BASE}/${REPO}\""
			rm -rf "${BASE}/${REPO}"

		;;
		failed-upgrade|abort-install|abort-upgrade|disappear)
			echo -n

		;;
		*)
			tag "$@" <<< "Called with unknown argument"
			exit 0

		;;
	esac
}
main "$@"
